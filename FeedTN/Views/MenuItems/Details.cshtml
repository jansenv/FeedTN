@using Microsoft.AspNetCore.Identity 
@model FeedTN.Models.MenuItem
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row float-right">
    <form asp-controller="Favorites" asp-action="Create">
        <input type="hidden" asp-for="MenuItemId" />
        <input type="submit" value="Favorite" class="btn btn-success" />
    </form>
</div>

<div>
    <h4>MenuItem</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Gluten Free
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlutenFree)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vegetarian)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vegetarian)
        </dd>
        <dt class = "col-sm-2">
