@model IEnumerable<FeedTN.Models.Report>

@{
    ViewData["Title"] = "Issues";
}

<h1>Open Issues</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Ticket #
            </th>
            <th>
                Created By
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Active == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                        @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                    </td>
                    <td>
                        @*Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                        @Html.ActionLink("View", "Edit", new { id = item.ReportId })
                        @**Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h1>Resolved</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Ticket #
            </th>
            <th>
                Created By
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Active == false)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                        @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                    </td>
                    <td>
                        @*Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                        @Html.ActionLink("View", "Edit", new { id = item.ReportId })
                        @**Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
