@model IEnumerable<FeedTN.Models.Report>

@{
    ViewData["Title"] = "IndexOfCurrentUserIssues";
}

<h1>Open Issues</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Ticket #
            </th>
            <th>
                Description
            </th>
            <th>
                Admin reply
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.Active == true)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ReportId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @*Html.ActionLink("View", "Edit", new { id = item.ReportId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ReportId }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<h1>Closed Issues</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Ticket #
            </th>
            <th>
                Description
            </th>
            <th>
                Resolution
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    @if (item.Active == false)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                @*@Html.ActionLink("View", "Edit", new { id = item.ReportId }) |
                @*Html.ActionLink("Details", "Details", new { id = item.ReportId }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
            </td>
        </tr>
    }
}
    </tbody>
</table>
