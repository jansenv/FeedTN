@model FeedTN.Models.OrderViewModels.OrderDetailViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>My Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Item
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lineItem in Model.LineItems) 
        {
            <tr>
                <td>
                    @lineItem.MenuItem.Title
                </td>
                <td>
                    1
                </td>
                <td>
                    <form asp-controller="UserMenuItems" asp-action="Delete" asp-route-Id="@lineItem.MenuItem.MenuItemId">
                        <input type="submit" value="DELETE" class="btn btn-danger bg-danger border-danger"/>
                    </form>
                </td>
            </tr>
        }
        <tr>
            <td></td>
            <td></td>
            <td>Total: @Model.Total</td>
            <td></td>
        </tr>
    </tbody>
</table>

<form asp-Controller="Orders" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Order.OrderId" />
    <div class="form-group">
        <input type="submit" class="btn-success bg-success border-success" value="Place Your Order" />
    </div>
</form>

<form asp-controller="Orders" asp-action="Delete" method="post">
    <input type="submit" class="btn-danger bg-danger border-danger" value="Cancel" />
</form>
